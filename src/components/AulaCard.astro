---
import { School } from 'lucide-astro';
const { id, grupo } = Astro.props;
---

<div class="card-container">
    <div class="icon-id-container">
        <div class="icon-container">
            <School size={35} />
        </div>
        <div class="id"><b>{id}</b></div>
    </div>
    
    <div class="grupo">{grupo}</div>
</div>

<style>
    .card-container {
        display: flex;
        justify-content: space-between; /* Separa los bloques a los extremos */
        align-items: center;
        padding: 15px 25px;
        background-color: #f5f5f5;
        border-radius: 8px;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        font-size: 15px;
    }

    .icon-id-container {
        display: flex;
        align-items: center;
    }

    .icon-container {
        margin-right: 25px; /* Espacio entre el icono y el ID */
    }

    .grupo {
        color: #333;
    }
</style>