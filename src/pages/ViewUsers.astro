            </tr>
          </thead>
          <tbody id="users-list">
            {usuarios.map((usuario) => (
              <tr
                class="user-row"
                data-status={usuario.aceptado ? "active" : "inactive"}
                data-name={(usuario.nombre || "").toLowerCase()}
                data-id={usuario.id}
              >
                <td>{usuario.nombre || "Sin nombre"}</td>
                <td>{usuario.correo}</td>
                <td class="user-type">{usuario.tipo || "N/A"}</td>
