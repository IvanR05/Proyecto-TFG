    <!-- Controles de filtrado -->
    <div class="controls">
      <div class="filters">
        <button class="filter-btn active" data-filter="all">ğŸŒ Todos</button>
        <button class="filter-btn" data-filter="active">âœ… Activos</button>
        <button class="filter-btn" data-filter="inactive">â›” Inactivos</button>
      </div>

      <div class="search-box">
        <input
          type="text"
          id="search-input"
          placeholder="ğŸ” Buscar por nombre..."
          class="search-input"
        />
      </div>
    </div>

    <!-- Tabla de usuarios -->
    {error ? (
