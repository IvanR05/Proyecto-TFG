---
import AppLayout from "../layouts/AppLayout.astro";
import { supabase } from "../lib/supabase.js";

const queryParams = new URL(Astro.request.url).searchParams;
const id = queryParams.get('id');
const grupo = queryParams.get('grupo');
const editando = queryParams.get('editando');
---

<AppLayout page_title="Formulario">
  <div class="content">
    <h1>Editor de aulas</h1>
    <div class="inputs">
      <input
        id="idInput"
        type="text"
        placeholder="Nombre del aula"
        value={editando === 'true' ? id : ''}
      />
      <input
        id="grupoInput"
        type="text"
        placeholder="Curso"
        value={editando === 'true' ? grupo : ''}
      />
    </div>
    <div class="buttons">
      <button class="aceptar" onclick={`setTimeout(() => handleSubmit(), 0)`}>Aceptar</button>
      <button class="cancelar" onclick="window.location.href='/GestionAulas'">Cancelar</button>
      <br><br><br><br><br><br><br><br>
    </div>
  </div>
</AppLayout>

<script is:inline>
    async function handleSubmit() {
        //Se recuperan los valores de los dos inputs
        const idInput = document.getElementById('idInput').value.trim();
        const grupoInput = document.getElementById('grupoInput').value.trim();

        //Si estan vacios se pide al usuario que los rellene
        if (!idInput || !grupoInput) {
            alert("Por favor, completa todos los campos.");
            return;
        }

        //Se recupera el parametro 'editando' de la URL
        const urlParams = new URLSearchParams(window.location.search);
        const editando = urlParams.get('editando');
        
        let aulaData = {};
        let url = '';
        let method = '';

        //Si se esta editando se llama al archivo de api update-aula y se le pasan los datos nuevos y la id original
        if (editando === 'true') {
            url = '/api/update-aula';
            method = 'PUT';
            const idOriginal = urlParams.get('id');
            aulaData = {
                id_original: idOriginal,
                id_nuevo: idInput,
                curso_nuevo: grupoInput
            };
        } else { //Si no esta en modo editar se llama a add-aula con los datos nuevos
            url = '/api/add-aula';
            method = 'POST';
            aulaData = {
                id_aula: idInput,
                curso: grupoInput
            };
        }

        //Se gestionan errores y se vuelve a la pagina de GestionAulas.astro
        try {
            const response = await fetch(url, {
                method,
                headers: { 'Content-Type': 'application/json' },
                body: JSON.stringify(aulaData)
            });

            const result = await response.json();
            
            if (!response.ok) throw new Error(result.message || 'Error desconocido');

            alert(result.message);
            window.location.href = "/GestionAulas";
        } catch (error) {
            alert(`Error: ${error.message}`);
        }
    }
</script>

<style>
    :root {
      --color-primario: #2C3E50;
      --color-secundario: #3498DB;
      --color-texto: #2C3E50;
      --color-fondo: #b0f7fc;
      --sombra: 0 4px 8px rgba(0, 0, 0, 0.15);
    }

    body {
        background-color: rgb(226, 251, 255);
    }

    h1 {
        color: var(--color-secundario);
    }

    .content {
        display: flex;
        flex-direction: column;
        min-height: 100vh;
        justify-content: space-between;
    }

    .inputs {
        display: flex;
        flex-direction: column;
        gap: 15px;
        flex-grow: 1;
    }

    .inputs input {
        width: 100%;
        padding: 10px;
        font-size: 16px;
        border: 1px solid #ccc;
        border-radius: 4px;
    }

    .buttons {
        display: flex;
        flex-direction: column;
        justify-content: space-between;
        gap: 15px;
    }

    .buttons button {
        width: 100%;
        padding: 12px;
        font-size: 16px;
        border: none;
        border-radius: 4px;
        color: white;
        background-color: var(--color-secundario);
        cursor: pointer;
    }

    .buttons button:hover {
        opacity: 0.9;
    }
</style>