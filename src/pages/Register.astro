---
import Layout from "../layouts/Layout.astro";
---

<Layout title="Registrarse">
    <main class="register-container">
        <div class="register-card">
            <h1>Registrarse</h1>
            <p>¿Ya tienes una cuenta? <a href="/Login">Iniciar sesión</a></p>
            <form action="/api/auth/register" method="post" class="register-form">
                <div class="input-group">
                    <label for="nombre">Nombre</label>
                    <input type="text" name="nombre" id="nombre" required placeholder="Nombre" />
                </div>
                <div class="input-group">
                    <label for="email">Correo electrónico</label>
                    <input type="email" name="email" id="email" required placeholder="nombre@correo.com" />
                </div>
                <div class="input-group">
                    <label for="password">Contraseña</label>
                    <input type="password" name="password" id="password" required placeholder="********" />
                </div>
                <button type="submit" class="register-btn">Registrarse</button>
            </form>
        </div>
    </main>

    <style>
        :root {
            --color-primario: #2C3E50;
            --color-secundario: #3498DB;
            --color-texto: #2C3E50;
            --color-fondo: #b0f7fc;
            --sombra: 0 4px 8px rgba(0, 0, 0, 0.15);
        }

        h1 {
            color: var(--color-secundario); /* Color secundario */
        }

        

        .register-container {
            display: flex;
            justify-content: center;
            align-items: center;
            min-height: 100%;
            padding: 2rem;
            box-sizing: border-box;
            background: var(--color-fondo);
        }

        .register-card {
            display: flex;
            justify-content: center;
            align-items: center;
            flex-direction: column;

            background: white;
            border-radius: 1rem;
            padding: 2.5rem;
            box-shadow: var(--sombra);
            max-width: 400px;
            width: 100%;
            height: 70vh;
            text-align: center;
        }

        .register-form {
            display: flex;
            flex-direction: column;
            gap: 1rem;
            margin-top: 1rem;
        }

        .input-group {
            display: flex;
            flex-direction: column;
            text-align: left;
            gap: 0.5rem;
        }

        label {
            font-weight: bold;
            color: var(--color-texto);
        }

        input {
            padding: 0.75rem;
            border: 2px solid #ECF0F1;
            border-radius: 0.5rem;
            font-size: 1rem;
            transition: border-color 0.3s;
        }

        input:focus {
            border-color: var(--color-secundario);
            outline: none;
        }

        .register-btn {
            background: var(--color-secundario);
            color: white;
            padding: 1rem;
            border: none;
            border-radius: 0.5rem;
            font-size: 1rem;
            font-weight: bold;
            cursor: pointer;
            transition: 0.3s;
            margin-top: 20px;
        }

        .register-btn:hover {
            background: #2980B9;
        }

        .register-card p {
            color: var(--color-texto);
            margin-top: 1rem;
        }

        .register-card a {
            color: var(--color-secundario);
            text-decoration: none;
            font-weight: bold;
        }

        @media (max-width: 480px) {
            .register-card {
                padding: 1.5rem;
            }
        }
    </style>
</Layout>