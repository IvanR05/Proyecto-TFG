---
import Layout from "../layouts/Layout.astro";

const { cookies, redirect } = Astro;

const accessToken = cookies.get("sb-access-token");
const refreshToken = cookies.get("sb-refresh-token");

if (accessToken && refreshToken) {
    return redirect("/Home");
}
---


<Layout title="Iniciar sesión">
    <main class="login-container">
        <div class="login-card">
            <h1>Iniciar sesión</h1>
            <p>¿Nuevo aquí? <a href="/Register">Crea una cuenta</a></p>
            <form action="/api/auth/login" method="post" class="login-form">
                <div class="input-group">
                    <label for="email">Correo electrónico</label>
                    <input type="email" name="email" id="email" required placeholder="nombre@correo.com" />
                </div>
                <div class="input-group">
                    <label for="password">Contraseña</label>
                    <input type="password" name="password" id="password" required placeholder="********" />
                </div>
                <button type="submit" class="login-btn">Iniciar sesión</button>
            </form>
        </div>
    </main>

    <style>
        :root {
            --color-primario: #2C3E50;
            --color-secundario: #3498DB;
            --color-texto: #2C3E50;
            --color-fondo: #F9F9F9;
            --sombra: 0 4px 8px rgba(0, 0, 0, 0.15);
        }

        /* Aplicar la tipografía Open Sans globalmente */
        body {
            font-family: 'Open Sans', sans-serif;
        }

        h1 {
            color: var(--color-secundario); /* Color secundario */
        }
        .login-container {
            display: flex;
            justify-content: center;
            align-items: center;
            min-height: 100vh;
            padding: 2rem;
            background: var(--color-fondo);
        }

        .login-card {
            background: white;
            border-radius: 1rem;
            padding: 2.5rem;
            box-shadow: var(--sombra);
            max-width: 400px;
            width: 100%;
            text-align: center;
        }

        .login-form {
            display: flex;
            flex-direction: column;
            gap: 1rem;
            margin-top: 1rem;
        }

        .input-group {
            display: flex;
            flex-direction: column;
            text-align: left;
            gap: 0.5rem;
        }

        label {
            font-weight: bold;
            color: var(--color-texto);
        }

        input {
            padding: 0.75rem;
            border: 2px solid #ECF0F1;
            border-radius: 0.5rem;
            font-size: 1rem;
            transition: border-color 0.3s;
        }

        input:focus {
            border-color: var(--color-secundario);
            outline: none;
        }

        .login-btn {
            background: var(--color-secundario);
            color: white;
            padding: 1rem;
            border: none;
            border-radius: 0.5rem;
            font-size: 1rem;
            font-weight: bold;
            cursor: pointer;
            transition: 0.3s;
        }

        .login-btn:hover {
            background: #2980B9;
        }

        .login-card p {
            color: var(--color-texto);
            margin-top: 1rem;
        }

        .login-card a {
            color: var(--color-secundario);
            text-decoration: none;
            font-weight: bold;
        }

        @media (max-width: 480px) {
            .login-card {
                padding: 1.5rem;
            }
        }
    </style>
</Layout>
